<% layout('../layouts/admin') -%>
<div class="row ">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/users"> Users</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">Detail</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">View User Detail</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12 " style="padding-bottom: 15px; margin-top:20px">
                        <img style="width: 80px; height: 80px; border-radius: 50%; border: 1px solid #d3d3d3"
                             src="<%=url%><%=user.avatar%>"
                             alt="image">
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label>Name: </label> <%= user.name %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label>Email: </label> <%= user.email %>
                        </div>
                    </div>



                    <!-- <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label>Subscription: </label> <%- user.is_paid ? '<span class="badge label-table badge-success">Yes</span>': '<span class="badge label-table badge-secondary">No</span>' %>
                        </div>
                    </div> -->

                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label>Status: </label> <%- user.isSuspended ? '<span class="badge label-table badge-secondary">In-Active</span>': '<span class="badge label-table badge-success">Active</span>' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    

    
    